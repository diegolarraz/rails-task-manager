<div class="top-box">
<h1><%= @task.title %></h1>
<%= link_to("Edit this task", edit_task_path)%>
</div>
<div class="text-box">
<p><%= @task.details %></p>
</div>
<br>
<% if @task.completed %>
      <p><input <%= "type=checkbox name=#{@task[:id]}"%> checked> This task is completed</p>
    <% else %>
      <p><input <%= "type=checkbox name=#{@task[:id]}"%>> This task is not completed yet</p>
<% end %>
<%= link_to("Back to list", tasks_path)%>
